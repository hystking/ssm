//
// Import nib
//

@require nib

//
// Import Mixins
//

@require "mixin/*"

//
// Global Reset
//

global-reset()

//
// Wrapper Style
//

.{meta.slug}
  -webkit-font-smoothing: antialiased
  -moz-osx-font-smoothing: grayscale
  font-family: font.gothic
  font-size: 32px
  line-height: 1
  font-weight: bold
  color: #333
  &, *
    box-sizing: border-box

a
  color: inherit
